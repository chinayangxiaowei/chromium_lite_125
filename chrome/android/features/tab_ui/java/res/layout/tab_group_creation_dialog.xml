<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false">

        <LinearLayout
            android:id="@+id/creation_dialog_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp" >

            <androidx.appcompat.widget.DialogTitle
                android:id="@+id/creation_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:accessibilityHeading="true"
                android:text="@string/tab_group_creation_dialog_title"
                android:textAppearance="@style/TextAppearance.Headline.Primary" />

            <org.chromium.chrome.browser.tasks.tab_management.TabGroupCreationTextInputLayout
                        android:id="@+id/tab_group_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="16dp"
                        android:hint="@string/title"
                        app:emptyErrorMessage="@string/tab_group_creation_missing_title">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/title_input_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textCapSentences|textAutoCorrect"
                            android:selectAllOnFocus="true" />
            </org.chromium.chrome.browser.tasks.tab_management.TabGroupCreationTextInputLayout>
        </LinearLayout>
</ScrollView>